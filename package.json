{
  "name": "smart-release-notes-action",
  "version": "1.0.0",
  "description": "Automatically generate clean, categorized release notes from merged PRs and commits.",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build src/index.ts --out dist --minify",
    "test": "jest",
    "lint": "eslint src/ --ext .ts",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.ts\" \"__tests__/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"__tests__/**/*.ts\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nayandas69/smart-release-notes-action"
  },
  "keywords": [
    "github-action",
    "release-notes",
    "changelog",
    "automation"
  ],
  "author": "nayandas69",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.0",
    "@vercel/ncc": "^0.38.1",
    "jest": "^29.7.0",
    "prettier": "^3.8.1",
    "ts-jest": "^29.1.4",
    "typescript": "^5.4.5"
  }
}